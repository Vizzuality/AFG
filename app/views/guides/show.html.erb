<div class="wide_container"> 
  
  <div class="header_guide"> 
    <img class="arrow" src="images/common/arrow_menu.png" alt=""/> 
    <div class="content"> 
      <div class="content_left"> 
        <p class="title"><%= @guide.name %></p> 
        <p class="by">by <%= @guide.author %></p> 
        <div class="data_info"> 
          <p class="downloads_data"><span><%= @guide.popularity %></span></p> 
        </div> 
        <%= simple_format(@guide.description, :class => 'info_guide') %>
        
        <a class="download_guide" href="<%= pdf_guide_path(@guide) + '.pdf' %>"> 
          <p class="title">download this guide</p> 
          <p class="size">(32 pages, 2,3MB)</p>
        </a> 
        <% if !@current_guide.included_guides.include?(@guide) && @current_guide != @guide %>
        <p class="template">or 
          <%= link_to('use it as template', entries_path(:type => 'Guide', :id => @guide), :method => :post) %> for yours
        </p>
        <% end %>
                  
      </div> <!-- content_left --> 
      <div class="content_right"> 
        
        <div class="amount_info"> 
          <p class="species_guide_rank second_rank white right"><%= pluralize(@guide.species_count, 'SPECIES') %></p> 
        </div> 
        <div class="bkg_map"> 
          <div class="map"></div> 
        </div> 
      </div> 
    </div> 
  </div> <!-- header_guide --> 
  
  <div class="taxonomy_browser_body"> 
    <div class="content"> 
      <div class="content_left"> 
        <p class="species_included">Species included</p> 
        <p class="number_species"><b><%= pluralize(@guide.species_count, 'SPECIES') %></b> in this guide</p>        
      </div> 
      <div class="content_right"> 
        <a class="view_advanced_browser" href="#">view the <span>advanced taxon browser</span></a> 
      </div> 
      <div class="taxonomy_browser"> <!-- FAKE --> 
      </div> 
    </div> 
  </div> <!-- taxonomy_browser_body --> 
          
  <div class="info_species_list"> 
    <p>more than <%= Species.count %> species in our <a href="<%= species_index_path %>">species list</a></p> 
  </div> 
  
  <%= render 'guides/your_guide' %>

</div>